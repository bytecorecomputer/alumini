rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. User Profiles: Users can read/write their OWN data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Students: Public read (for login/directory), Restricted write
    match /students/{studentId} {
      allow get, list: if true; 
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    // 3. Certificates: Public read (verification), Staff write
    match /certificates/{certId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 4. Metadata and Courses: Public read, Admin write
    match /metadata/{docId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    // 5. Default restrictive fallback (Best Practice)
    // Only allow access if explicitly defined above, or for admins
    match /{document=**} {
      allow read, write: if request.auth != null; 
    }
  }
}
