rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. User Profiles: Users can read/write their OWN data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Students: Admins can read/write, Students can read only
    match /students/{studentId} {
      allow read: if true; // Open read for directory/search
      allow write: if request.auth != null; // Only Staff/Admins
    }

    // 3. Certificates: Public read (verification), Staff write
    match /certificates/{certId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 4. Metadata and Courses: Public read, Admin write
    match /metadata/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 5. Default restrictive fallback (Best Practice)
    // Only allow access if explicitly defined above, or for admins
    match /{document=**} {
      allow read, write: if request.auth != null; 
    }
  }
}
